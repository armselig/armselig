{
  "name": "armselig.github.io",
  "version": "1.0.0-alpha.1",
  "description": "Personal website for Hendrik Neumann",
  "private": true,
  "scripts": {
    "clean": "rimraf ./dist && mkdir ./dist",
    "predev": "run-s clean copy:static",
    "dev": "parcel src/index.html --port 3000 --open",
    "prebuild": "run-s clean copy:static",
    "build": "parcel build src/index.html --no-source-maps",
    "copy:static": "cp -r ./static/* ./dist"
  },
  "repository": {
    "type": "git",
    "url": "github:armselig/armselig.github.io"
  },
  "author": "Hendrik Neumann <henne@armselig.net>",
  "license": "MIT",
  "homepage": "https://github.com/armselig/armselig.github.io#readme",
  "devDependencies": {
    "@parcel/core": "^2.8.3",
    "@parcel/transformer-sass": "^2.8.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.3",
    "rimraf": "^3.0.2",
    "sass": "^1.50.0"
  },
  "browserslist": [
    "defaults"
  ]
}